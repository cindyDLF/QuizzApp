<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_quizz"
        tools:context=".Quizz">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/score_text" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_marginBottom="41dp"
            app:layout_constraintBottom_toTopOf="@+id/questions" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="333dp" android:layout_marginStart="333dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="371dp"
            android:layout_height="19dp"
            android:id="@+id/questions"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:id="@+id/response_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toStartOf="@+id/response_2"
            android:layout_marginEnd="10dp" android:layout_marginRight="10dp"
            android:onClick="onClickResponseOne" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/questions"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/response_2"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/response_1"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/questions"
            app:layout_constraintEnd_toStartOf="@+id/response_3" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" android:onClick="onClickResponseTwo"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/response_3"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/response_2" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/questions" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:onClick="onClickResponseTree"/>

</android.support.constraint.ConstraintLayout>